#!/usr/bin/env bash
# Displays PIDs and names of processes containing the word 'bash'

# Iterate over all numbered directories in /proc (representing PIDs)
for pid in /proc/[0-9]*; do
  # Check if the comm file exists for this PID
  if [[ -f "$pid/comm" ]]; then
    # Read the process name from the comm file
    proc_name=$(cat "$pid/comm")
    # Check if the process name contains 'bash'
    if [[ "$proc_name" == *bash* ]]; then
      # Extract and print the PID and process name
      basename "$pid" && echo -n " " && echo "$proc_name"
    fi
  fi
done
