#!/usr/bin/env bash
# Display information about subdomains

print_subdomain_info() {
    dig_output=$(dig "$1" | grep -A1 'ANSWER SECTION:')
    sub_domain="$2"
    echo "$dig_output" | sed -r "s/$1\./$sub_domain/g" | awk -F" " 'NR==2 {print "The subdomain " $1 " is a " $4 " record and points to " $5}'
}

if [ "$#" -eq 2 ]; then
    print_subdomain_info "$1.$2" "$2"
else
    print_subdomain_info "www.$1" "www"
    print_subdomain_info "lb-01.$1" "lb-01"
    print_subdomain_info "web-01.$1" "web-01"
    print_subdomain_info "web-02.$1" "web-02"
fi
